public class Solution {
    public int hammingWeight(int n) {
        int hamming = 1;
        int count = 0;
        
        int i = 0;
        while (i < 32) {
            if ((hamming & n) != 0) {
                count++;
            }
            hamming <<= 1;
            i++;
        }
        return count;
    }
}
