class Solution {
    public int hammingDistance(int x, int y) {
       // dis = y - x;
       // dis = y - x;
        int countX = 0;
        int countY = 0;
        int i = 1;
        int pos = x ^ y;
        int n = 1;
        
        if (pos == 1) return 1;
        
        while (pos != 0) {
           if ((pos & n) != 0) {
                countX++;
            }
            pos >>= 1;
        i++;
        }

    return countX;
    }
}
